{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "webpack-env",
      "aspnet-webpack-react"
    ],
    "paths": {
      "history": [
        "./node_modules/@types/history/index"
      ],
      "redux": [
        "./node_modules/@types/redux/index"
      ],
      "react": [
        "./node_modules/@types/react/index"
      ]
    }
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}